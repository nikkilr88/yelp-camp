<% include ../partials/header %>

<div class="container">
    
    <h1 class="text-center">Edit Comment</h1>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            
                <input class="form-group form-control" type="text" name="comment[text]" value="<%= comment.text %>" />
                <input class="form-group btn btn-primary btn-block" type="submit" value="Submit" />
            </form>
        
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
